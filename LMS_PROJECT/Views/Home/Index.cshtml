
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .heading {
        text-align: center;
        font-size: 3rem;
        font-weight: 700;
        position: relative;
        color: var(--primary-color);
        text-transform: uppercase;
        letter-spacing: 0.4rem;
        margin-bottom: 2rem;
    }

        .heading::after {
            content: url("/img/separator.svg");
            display: block;
            width: 14rem;
            margin-inline: auto;
            margin-top: -1rem;
        }
    :root {
        --primary-color: #12c2b9;
        --secondary: #dbfffe;
        --black: #141414;
        --white: #fff; 
        --box-shadow: 0 .5rem 1rem rgba(0, 0, 0, 0.5);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "DM Sans", sans-serif;
        border: none;
        outline: none;
        text-decoration: none;
    }

    html {
        font-size: 62.5%;
        overflow-x: hidden;
        scroll-padding-top: 9rem;
        scroll-behavior: smooth;
    }

        html::-webkit-scrollbar {
            width: 1rem;
        }

        html::-webkit-scrollbar-track {
            background: var(--white);
        }

        html::-webkit-scrollbar-thumb {
            background-color: var(--primary-color);
        }

    section {
        padding: 15rem 9%;
    }

    .btn {
        position: relative;
        display: inline-block;
        margin-top: 1rem;
        color: var(--primary-color);
        font-size: 1.4rem;
        font-weight: 700;
        text-transform: uppercase;
        max-width: max-content;
        border: 0.1rem solid var(--primary-color);
        background: var(--secondary);
        padding: 1.2rem 4.5rem;
        overflow: hidden;
        z-index: 1;
        border-radius: .5rem;
    }

        .btn::before {
            content: "";
            position: absolute;
            bottom: 100%;
            left: 50%;
            transform: translateX(-50%);
            width: 200%;
            height: 200%;
            border-radius: 50%;
            background-color: var(--primary-color);
            transition: 500ms ease;
            z-index: -1;
        }

        .btn .text {
            transition: 250ms ease;
        }

        .btn .text-2 {
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            min-width: max-content;
            color: var(--secondary);
        }

        .btn:is(:hover, :focus-visible)::before {
            bottom: -50%;
        }

        .btn:is(:hover, :focus-visible) .text-1 {
            transform: translateY(-4rem);
        }

        .btn:is(:hover, :focus-visible) .text-2 {
            top: 50%;
            transform: translate(-50%, -50%);
        }

    .auth-buttons {
        display: flex;
        gap: 10px;
        margin-right: -60px;
    }

    .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        background: var(--white);
        box-shadow: var(--box-shadow);
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem 9%;
    }

        .header .logo {
            font-size: 2.5rem;
            font-weight: bolder;
            color: var(--black);
        }

            .header .logo i {
                color: var(--primary-color);
                padding-right: 1rem;
            }

        .header .navbar a {
            font-size: 1.7rem;
            font-weight: 500;
            color: var(--black);
            margin: 0 1rem;
            padding-block: 1rem;
        }

            .header .navbar a:hover {
                color: var(--primary-color);
                font-weight: 700;
                border-bottom: 2px solid var(--primary-color);
            }

        .header .navbar .nav-links {
            position: relative;
            max-width: max-content;
        }

        .header .icons div {
            font-size: 2.5rem;
            margin-left: 1.7rem;
            color: var(--black);
            cursor: pointer;
        }

        .header .icons div:hover {
            color: var(--primary-color);
        }

    .home {
        display: flex;
        align-items: center;
        min-height: 100vh;
        background-image: url("/img/home.jpg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

        .home .content {
            max-width: 50rem;
        }

            .home .content h3 {
                color: var(--white);
                font-size: 55px;
                line-height: 1.4;
                letter-spacing: 1px;
                text-transform: capitalize;
            }

            .home .content p {
                color: var(--white);
                line-height: 2;
                font-size: 1.6rem;
                font-style: normal;
                font-weight: 500;
                padding: 1rem 0;
            }

    .features {
        padding: 50px 20px;
        text-align: center;
    }

    .features-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        height: 200px;
        justify-content: center;
    }

    .feature {
        flex: 1;
        min-width: 250px;
        max-width: 350px;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 2px 4px 6px rgba(0, 0, 0, 0.5);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        background-color: var(--secondary);
        color: var(--black);
        width: 40px;
        padding: 10px;
    }

        .feature:hover {
            transform: translateY(-10px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.45);
        }

        .feature i {
            margin-top: 10px;
            font-size: 5rem;
            color: var(--primary-color);
            margin-bottom: 15px;
        }

        .feature h4 {
            font-size: 2.25rem;
            color: #333;
            margin: 10px 0;
        }

        .feature p {
            font-size: 1.5rem;
            color: #555;
            line-height: 1.5;
            text-align: center;
        }

</style>

